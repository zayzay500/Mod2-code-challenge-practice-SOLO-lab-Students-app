<% if @student.errors.any? %>
    <div>
        <h2>
            <%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:
        </h2>
        <ul>
            <% @student.errors.each do |key, message|%>
                <li>
                    <%= key %>: <%= message %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :major %>
    <%= f.text_field :major %>
    <%= f.label :instructor %>
    <%= f.collection_select :instructor_id, @instructors, :id, :name %>
    <%= f.label :age %>
    <%= f.number_field :age %>
    
    <%= f.submit %>
<% end %>

